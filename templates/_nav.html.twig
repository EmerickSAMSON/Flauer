<header>

	<img src="" alt="" class="background">

	<a href="" class="logo">
		<img src="" alt="">
	</a>

	<nav class="navbar">

		<a href="{{ path('accueil') }}">accueil</a>
		<a href="#realisation">réalisation</a>
		<a href="#about">à propos</a>
		<a href="#contact">contact</a>

	</nav>


	<div id="user">

		{% if app.user == false %}

			<div class="register">
				<a href="{{ path('app_register') }}">S'enregistrer</a>
			</div>
			<div class="login">
				<a href="{{path('app_login')}}">Se Connecter</a>
			</div>
		{% endif %}


		{% if app.user %}
			<div class="logout">
				<a href="{{path('app_logout')}}">Deconnexion</a>
			</div>
			<div class="profil">
				<a href="{{path('profil')}}">Mon compte</a>
			</div>

			{% if is_granted("ROLE_ADMIN") %}

				<div class="dashboard">
					<a href="{{path('admin')}}">Dashboard</a>
				</div>

			{% endif %}
		{% endif %}


	</div>

	<div class="icons">

		<div id="search">

			<a href="#">
				<i class="fas fa-search" id="search-btn"></i>
			</a>

		</div>
		<div id="panier">

			<a href="#">
				<i class="fas fa-shopping-cart" id="cart-btn"></i>
			</a>

		</div>
	</div>

</header>
